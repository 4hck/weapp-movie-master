.swiper-container {
  position: relative;
  display: flex;
  align-items: flex-end;
  padding-bottom: 20rpx;
  width: 100%;
  height: 270rpx;
  overflow: hidden;
}

.post-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  overflow: hidden;
  -webkit-filter: blur(30px);
  filter: blur(30px);
  background-position-y: 40%;
}

.post-bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #40454d;
  opacity: 0.55;
}

.scroll-view_H {
  white-space: nowrap;
  width: 100%;
}

.movie-item {
  display: inline-block;
  width: 130rpx;
  height: 190rpx;
  margin-right: 30rpx;
  transition: all 0.3s;
  transform-origin: bottom;
}

.movie-item.select {
  position: relative;
  transform: scale(1.15);
  border: 2px solid #fff;
}

