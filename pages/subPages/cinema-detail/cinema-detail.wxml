<view>
  <view class='cinema-info'>
    <view class='info-box'>
      <view class='title line-ellipsis'>{{cinemaDetail.cinemaData.nm}}</view>
      <view class='location line-ellipsis'>{{cinemaDetail.cinemaData.addr}}</view>
    </view>
    <navigator url='/pages/subPages/cinema-map/cinema-map' class='location-icon'>
      <image src='/assets/images/location.png'></image>
    </navigator>
  </view>
  <view>
    <view class='swiper-container'>
      <view class='post-bg'></view>
      <view class='post-bg-mask'></view>
      <scroll-view class='swiper-wrapper'></scroll-view>
    </view>
    <view class='movie-info'>
      <view class='movie-title line-ellipsis'>
        <text class='title'>{{movie.nm}} </text>
        <text class='grade'>{{movie.sc}}<text class='small'>分</text></text>
      </view>
      <view class='movie-desc line-ellipsis'>{{movie.desc}}</view>
    </view>
  </view>
  <view>
    <select-time days='{{days}}' bindselectDayEvent='selectDay'></select-time>
  </view>
  <view>
    <view class='time' wx:for='{{timeList}}' wx:key='{{item.tm}}' class='item'>
      <view class='time-block block'>
        <view class='begin'>{{item.tm}}</view>
        <view class='end'>{{item.endTime}} 散场</view>
      </view>
      <view class='info-block block'>
        <view class="lan">{{item.lang}} {{item.tp}}</view>
        <view class="hall">{{item.th}}</view>
      </view>
      <view class='price'>
        <view class='price-box'>
          <view class="sellPr">
            <text class="stonefont">37</text>
            <text class="d">元</text>
          </view>
          <view class="vipPrice" wx:if='{{item.vipPriceName || item.vipPriceNameNew}}'>
            <text class="icon">{{item.vipPriceName || item.vipPriceNameNew}}</text>
            <text class="num">{{item.vipPrice}}</text>
          </view>
        </view>
        <view class='discount' wx:if='{{item.extraDesc}}'>{{item.extraDesc}}</view>
      </view>
      <view class='button-block'>
        <view class='button'>购票</view>
      </view>
    </view>
  </view>
  <view class='tuan-list' wx:if='{{divideDealList.length}}'>
    <view class='title'>影院超值套餐</view>
    <view class='tuan-item' wx:for='{{divideDealList}}' wx:key='{{item.title}}'>
      <view wx:for='{{item.dealList}}' wx:for-item="i" wx:key='{{i}}' class='snack-item'>
        <view>
          <image src='{{i.imageUrl}}'></image>
        </view>
        <view class='snack-info'>
          <view class='first-title'>{{i.firstTitle}}</view>
          <view class='second-title line-ellipsis'>{{i.secondTitle}}</view>
          <view class='snack-price'>
            <view>
              <text class='num'>{{i.price}}</text>
              <text class='rmb'>元</text>
              <text class='font'> 影院价:{{i.value}}元</text>
            </view>
            <view class='font'>{{i.curNumberDesc}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>