.search-wrapper {
  background-color: #fff;
  height: 100vh;
}

.search-header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  box-sizing: border-box;
  padding: 0 20rpx;
  background-color: #f5f5f5;
}

.cancel {
  color: #f03d37;
}

.search-input {
  flex-grow: 1;
  margin-right: 20rpx;
  background: #fff;
  color: #999;
  border-radius: 10rpx;
  border: 1px solid #e6e6e6;
  height: 60rpx;
  box-sizing: border-box;
  padding-left: 50rpx;
}

.icon-sousuo {
  position: absolute;
  top: 50%;
  left: 40rpx;
  font-size: 26rpx;
  transform: translateY(-45%);
  color: #999;
}

.result-list {
  margin-top: 88rpx;
}

.search-wrapper .title {
  font-size: 30rpx;
  color: #999;
  padding: 18rpx 30rpx;
}

.cinema-section {
  padding: 30rpx;
  border-top: 1px solid #e6e6e6;
  line-height: 1.8em;
}

.name-price {
  font-size: 32rpx;
  color: #000;
}

.sell-price {
  font-size: 24rpx;
  color: #999;
  white-space: nowrap;
  margin-left: 20rpx;
}

.price {
  font-size: 34rpx;
  color: #ef4238;
}

.address {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #999;
}

.feature-tags {
  width: 80%;
}

.feature-tags text {
  border: 1px solid #589daf;
  color: #589daf;
  padding: 0 6rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 8rpx;
}

.feature-tags .featrue {
  color: #f90;
  border-color: #f90;
}
