.top{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  color: #555;
  font-size: 28rpx;
}
.timeline{
  height: 90rpx;
  border-bottom: 1px solid #e6e6e6;
}
.day{
  display: inline-block;
  height: 90rpx;
  width: 30%;
  line-height: 90rpx;
  text-align: center;
  box-sizing: border-box;
  margin: 0 10rpx;
}
.day.active{
  color: #ef4238;
  border-bottom: 2px solid #ef4238;
}




::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}