#my-video {
  width: 100%;
  height: 420rpx;
}

.movie-intro-desc {
  position: relative;
  padding: 30rpx;
  border-bottom: 20rpx solid #f5f5f5;
  color: #666;
  font-size: 26rpx;
}

.name-box {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 38rpx;
}

.tag-box {
  border: 0.02rem solid #b3b5b9;
  border-radius: 4rpx;
  box-sizing: border-box;
  font-size: 20rpx;
  margin-left: 4rpx;
}

.tag-d {
  color: #fff;
  padding: 0 4rpx;
  background-color: #b3b5b9;
}

.tag-imax {
  color: #b3b5b9;
  padding: 0 4rpx;
}

.yellow {
  color: #ffc600;
  font-size: 32rpx;
}

.sc-box {
  margin: 10rpx 0;
}

.buy-tickets {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
}
