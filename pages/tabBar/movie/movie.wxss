.switch-hot {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  position: relative;
}

.hot-item {
  font-size: 30rpx;
  color: #666;
  width: 21.33333vw;
  text-align: center;
  margin: 0 24rpx;
  font-weight: 700;
}

.hot-item.active {
  color: #ef4238;
  border-bottom: 2px solid #ef4238;
}

.search-entry {
  color: #ef4238;
  font-weight: 700;
  padding: 20rpx 30rpx 20rpx 20rpx;
}

.search-entry .iconfont {
  font-size: 36rpx;
}

/* switch-content */

.switch-content {
  padding: 30rpx;
  padding-top: 0;
}

.title {
  padding-top: 20rpx;
  font-size: 28rpx;
}

.most-expected {
  position: relative;
  padding-bottom: 34rpx;
}
.most-expected::after{
  position: absolute;
  content: '';
  bottom: 0;
  left: -30rpx;
  width: 100vw;
  height: 20rpx;
  background: #f5f5f5;
}
.most-expected .title {
  margin-bottom: 20rpx;
}

.expected-item {
  display: inline-block;
  width: 170rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.poster {
  position: relative;
  width: 170rpx;
  height: 230rpx;
  margin-bottom: 12rpx;
}

.name {
  margin-bottom: 3px;
  font-size: 24rpx;
}

.data {
  font-size: 24rpx;
  color: #999;
}
